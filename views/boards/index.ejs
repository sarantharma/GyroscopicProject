<% layout('layouts/boilerplate') %>
<h1 class="board-title">All Boards</h1>
<div class="new-board_button">
  <a href="/boards/new"><button type="button" class="btn btn-outline-success">New Board</button></a>
</div>

<div class="boards-container row">

  <%for(let board of boards){%>
    <div class="card board" style="width: 18rem">
      <div class="card-body">
        <h5 class="card-title"><%= board.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= board.date.toLocaleString("en-US") %></h6>
        <p class="card-text"><%= board.description %></p>
        <a href="boards/<%=board._id%>"><button type="button" class="btn btn-primary btn-sm">View</button></a>
      </div>
    </div>
    <% } %>

</div>
